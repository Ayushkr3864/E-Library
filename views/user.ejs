<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link href="/stylesheets/style.css" rel="stylesheet">
  <script src="http://cdn.tailwindcss.com"></script>
</head>
<body>

    <div class="w-full h-full p-10 text text-black">
      <div>
        <a href="/">Go to main page</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3 font-light">All Users</h1>
      <div class="users flex gap-3  flex-wrap">
        <% users.forEach(function(user){ %>
          <div class="user w-65  p-4 bg-amber-700 rounded-lg">
            <div class="w-full h-52 bg-red-500 rounded-lg overflow-hidden"><img class="h-full w-full" src="/uploads/<%= user.Image %>" alt="user image"></div>
            <h3 class="text-1xl tracking-tighter mt-3"><%= user.fname %></h3>
            <h5 class="text-zinc-900"><%= user.email %></h5>
            <div>
              <a class="text-cyan-500" href="" >Edit user</a>
              <a href="/delete/<%= user._id %>">delete user</a>
            </div>
          </div>
        <% }) %> 
      </div>
    </div>
</body>
</html>